<div class="container" style="min-height: calc(100vh - 150px); margin-top: 100px;">
    <form action="/admin/add" method="POST" class="card" enctype="multipart/form-data">
        <h5 class="card-header">Add a Movie</h5>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12 p-3">
                    <label for="title" class="form-label">Movie Title</label>
                    <input required type="text" class="form-control" id="title" name="title" placeholder="Enter the movie title here...">
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 p-3">
                    <label for="synopsis">Movie Synopsis/Body</label>
                    <div class="form-floating">
                        <textarea required class="form-control" placeholder="Leave a comment here" id="synopsis" name="synopsis"
                            style="height: 100px"></textarea>
                        <label for="synopsis">Enter the movie synopsis here...</label>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 p-3">
                    <label for="photo" class="form-label">Profile Photo</label>
                    <input required class="form-control" type="file" id="photo" name="photo" accept="image/*">
                    <small class="form-text text-muted">Upload a photo (max 1mb)...</small>
                </div>

                <div class="col-md-6 p-3">
                    <label for="price" class="form-label">Price (in &#x20B1;)</label>
                    <input required type="number" min="1" step="0.001" class="form-control" id="price" name="price" placeholder="Enter the movie title here...">
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </div>
    </form>
    <br>

    <div class="row">
        <div class="col-md-12">
            <ul class="pagination" id="movies">
                {{#iff page '>' 1}}
                <li class="page-item">
                    <a class="page-link" href="/admin?page={{add page -1}}#movies" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                {{else}}
                <li class="page-item disabled">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                {{/iff}}
                <li class="page-item disabled"><span class="page-link font-weight-bold">Page {{page}} of {{maxPages}}</span></li>
                {{#iff page '<' maxPages}} <li class="page-item">
                    <a class="page-link" href="/admin?page={{add page 1}}#movies" aria-label="Previous">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                    </li>
                    {{else}}
                    <li class="page-item disabled">
                        <a class="page-link" aria-label="Previous">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                {{/iff}}
            </ul>
            <table class="table table-striped table-responsive">
                <thead>
                    <tr>
                        <th>Movie Poster</th>
                        <th>Movie Title</th>
                        <th>Movie Price</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each movies}}
                    <tr>
                        <td><img src="{{img poster}}" alt="" width="150px" height="auto"></td>
                        <td>{{title}}</td>
                        <td>&#x20B1; {{price}}</td>
                        <td>
                            <form action="/admin/delete" method="post">
                                <input type="hidden" name="id" value="{{_id}}">
                                <button type="submit" class="btn btn-danger">Delete Movie</button>
                            </form>
                        </td>
                    </tr>
                    {{else}}
                    <tr>
                        <td colspan="4"><b>There are no movies in the database yet...</b></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>