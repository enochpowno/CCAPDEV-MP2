<div class="container-fluid min-vh-100 pt-5">
  <form class="container card">
    <div class="card-body">
      <div class="card-title">
        <h5 class="display-5">Log In</h5>
      </div>
      <div class="form-row row">
        <div class="form-group col-md-6 my-2">
          <label for="username">Username</label>
          <input required autocomplete="username" type="text" class="form-control" id="username" name="username"
            placeholder="Username">
        </div>
        <div class="form-group col-md-6 my-2">
          <label for="password">Password</label>
          <input required type="password" class="form-control" id="password" name="password" placeholder="Password">
        </div>
      </div>
      <div class="form-row row">
        <div class="form-group col-md-6 my-2">
          <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" name="cookie" id="cookie">
            <label class="form-check-label" for="cookie">Remember me</label>
          </div>
        </div>
      </div>

      <div class="form-row row">
        <div class="col-md-4 my-2">
          <button type="submit" class="btn btn-primary">
            <span class="spinner-grow spinner-grow-sm visually-hidden" role="status" aria-hidden="true"></span>
            <span class="visually-hidden">Waiting for a response...</span>
            <b>Log In</b>
          </button>
        </div>
        <div class="col-md-8 my-2" id="responseView">

        </div>
      </div>
    </div>
  </form>
</div>