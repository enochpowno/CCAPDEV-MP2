{{#if message}}
<div class="toast d-flex align-items-center {{message.classes}} border-0"
    style="position: fixed; top: 72px; right: 50%; transform: translateX(50%); z-index: 99999;" role="alert" aria-live="assertive" aria-atomic="true"
    data-autohide="false">
    <div class="toast-body">
        {{message.message}}
    </div>
    <button type="button" class="btn-close btn-close-white ms-auto me-2" data-bs-dismiss="toast"
        aria-label="Close"></button>
</div>
{{/if}}

<nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">Movie Metro</a>
        
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01"
            aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse"id="navbarTogglerDemo01">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                <li class="nav-item nav-link"><a class="nav-link {{#if active.home}}active{{/if}}" href="/">Home</a>
                </li>
                <li class="nav-item nav-link"><a class="nav-link {{#if active.movies}}active{{/if}}" href="/movies#search">Movies</a>
                </li>
                {{#if user}}
                <li class="nav-item nav-link">
                    <a class="nav-link {{#if active.profile}}active{{/if}}" href="/profile">
                        <img src="{{img user.photo}}" height="30px" width="30px" style="border-radius: 15px; background-color: #fff; border: 3px solid #fff;" alt=""> &nbsp;
                        Profile
                    </a>
                </li>
                <li class="nav-item nav-link"><a class="nav-link text-white bg-danger text-white" href="/logout">Log Out</a></li>
                {{else}}
                <li class="nav-item nav-link"><a class="nav-link {{#if active.movies}}login{{/if}}" href="/login">Log In</a></li>
                <li class="nav-item nav-link"><a class="nav-link {{#if active.movies}}register{{/if}}" href="/register">Register</a></li>
                {{/if}}
            </ul>
        </div>
    </div>
</nav>