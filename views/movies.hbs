<section id="search">
    <div class="container">
        <form action="/movies#search" method="GET" class="mb-3">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Enter movie title here..." name="q" id="q" value="{{q}}">
                <div class="input-group-append">
                    <button class="btn btn-dark" type="button"><i class="fas fa-search"></i> Search</button>
                </div>
            </div>
        </form>
        
        {{#if q}}
            {{#if results}}

                <ul class="pagination">
                    {{#iff page '>' 1}}
                        <li class="page-item">
                            <a class="page-link" href="/movies?q={{q}}&page={{add page -1}}#search" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>
                    {{else}}
                        <li class="page-item disabled">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>
                    {{/iff}}
                    <li class="page-item disabled"><span class="page-link font-weight-bold">Page {{page}} of {{maxPages}}</span></li>
                    {{#iff page '<' maxPages}}
                        <li class="page-item">
                            <a class="page-link" href="/movies?q={{q}}&page={{add page 1}}#search" aria-label="Previous">
                                <span aria-hidden="true">&raquo;</span>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>
                    {{else}}
                        <li class="page-item disabled">
                            <a class="page-link" aria-label="Previous">
                                <span aria-hidden="true">&raquo;</span>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>
                    {{/iff}}
                </ul>
                
                <div class="row">
                    {{#each results}}
                        <div class="col-md-3">
                            <div class="poster my-3">
                                <a href="/movies/details?id={{this._id}}#movieDetails">
                                <img src="{{img this.poster}}" alt="" height="auto" width="100%"><div class="title text-center font-weight-bold" style="text-transform: capitalize;">{{this.title}}</div>
                                </a>
                            </div>
                        </div>
                    {{/each}}
                </div>
            {{else}}
                <h1 class="display-4 font-weight-bold">
                    No Results Found
                </h1>
            {{/if}}
        {{else}}
            <h1 class="display-4 font-weight-bold">
                Start searching now!
            </h1>
        {{/if}}
    </div>
</section>